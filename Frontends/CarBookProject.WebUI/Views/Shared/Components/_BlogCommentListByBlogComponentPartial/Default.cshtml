@*Blog Yorumları*@

 @model List<ResultCommentDto>

<h3 class="mb-5">@ViewBag.commentCount Yorum</h3>

<ul class="comment-list">
    @foreach(var item in Model)
    {
        <li class="comment">
            <div class="vcard bio">
                @* Kullanıcının görseli yok kayıt olurken image olcak onu getireceğiz. *@
                <img src="/carbook-master/images/person_7.jpg" alt="Image placeholder">
            </div>
            <div class="comment-body">
                <h3>@item.Name</h3>
                <div class="meta">@item.CreatedDate.ToString("dd-MMM-yyyy")</div>
                <p>@item.Description</p>
            </div>
        </li>

    }
</ul>