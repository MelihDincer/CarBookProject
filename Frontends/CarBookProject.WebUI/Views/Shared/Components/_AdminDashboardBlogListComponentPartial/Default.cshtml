@model List<ResultAllBlogsWithAuthorDto>

@{
    int count = 0;
}
<div class="col-xl-6">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Son Bloglar</h4>
            <p class="card-subtitle mb-4 font-size-13">
                Son Eklenen 5 Blog
            </p>

            <div class="table-responsive">
                <table class="table table-borderless table-hover table-centered table-nowrap" >
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Blog Başlığı</th>
                            <th>Yazar</th>
                            <th>Blogu Aç</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td style="font-size:10px !important"><h6 class=" mb-1 font-weight-normal">@count</h6></td>
                                <td style ="font-size:10px !important"><h6 class="f mb-1 font-weight-normal">@item.Title</h6></td>
                                <td style="font-size:10px !important"><h6 class=" mb-1 font-weight-normal">@item.AuthorName</h6></td>
                                <td style="font-size:10px !important"><h6 class=" mb-1 font-weight-normal"><a href="/Blog/BlogDetail/@item.BlogID" class="btn btn-sm btn-outline-primary">Blogu Aç</a></h6></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div> <!-- end card-body-->
    </div> <!-- end card-->
</div>