@*Tek Bir Blogun Detaylarının Bulunduğu Sayfada Yorum Yapma Bölümü --YENİ*@

<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Bir Yorum Yapın</h3>
    <form asp-action="AddComment" asp-controller="Blog" class="p-5 bg-light" method="post">
        <input type="hidden" class="form-control" name="BlogID" id="name" value="@ViewBag.blogId" readonly>
        <div class="form-group">
            <label for="name">Adınız Soyadınız*</label>
            <input type="text" class="form-control" id="name" name="Name">
        </div>
        <div class="form-group">
            <label for="email">Mail Adresiniz *</label>
            <input type="email" class="form-control" id="email" name="Email">
        </div>
        <div class="form-group">
            <label for="message">Yorumunuz</label>
            <textarea id="message" cols="30" rows="10" class="form-control" name="Description"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Yorum Yap" class="btn py-3 px-4 btn-primary">
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var title = '@Html.Raw(TempData["SweetAlertMessageTitle"])';
        var alertType = '@Html.Raw(TempData["SweetAlertType"])';
        var redirectUrl = '@Html.Raw(TempData["RedirectUrl"])';
        if (title && title.trim() !== "") {
            Swal.fire({
                title: title,
                icon: alertType,
                confirmButtonText: 'Tamam'
            })
        }
    });
</script>