@model UpdateCategoryDto

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Kategori Bilgisi Güncelleme</h4>
                        <p class="card-subtitle mb-4">Kategori alanında güncellemek istediğiniz veri girişini aşağıdaki panelden yapabilirsiniz.</p>
                        <form method="post" asp-action="UpdateCategory" asp-controller="AdminCategory">
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="hidden" asp-for="CategoryID" />
                                    <div class="form-group">
                                        <label for="exampleInputCategory">Kategori Adı</label>
                                        <input type="text" class="form-control" id="exampleInputCategory" asp-for="Name" placeholder="Kategori adını giriniz">
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                            <a href="/Admin/AdminCategory/Index/" class="btn btn-dark waves-effect waves-light">İptal</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
