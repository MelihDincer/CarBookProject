@model UpdateBannerDto

@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Banner Bilgisi Güncelleme </h4>
                        <p class="card-subtitle mb-4">Banner alanına veri girişini aşağıdaki panelden yapabilirsiniz. Tasarımda bozulma olmaması adına yeni bir banner girişi yaptıktan sonra önceki banner alanını silin, sadece 1 tane banner verisi kalmalıdır.</p>

                        <form method="post" asp-action="UpdateBanner" asp-controller="AdminBanner">
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="hidden" asp-for="BannerID" />
                                    <div class="form-group">
                                        <label for="exampleInputTitle">Başlık</label>
                                        <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Başlığı giriniz">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputDescription">Açıklama</label>
                                        <textarea rows="4" class="form-control" asp-for="Description" placeholder="Açıklamayı giriniz"> </textarea>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="exampleInputVideoUrl">Video Url</label>
                                        <input type="text" class="form-control" id="exampleInputVideoUrl" asp-for="VideoUrl" placeholder="Videonun Youtube embed linkini giriniz">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputVideoDescription">Video Açıklama</label>
                                        <textarea rows="4" class="form-control" asp-for="VideoDescription" placeholder="Video açıklamasını giriniz"></textarea>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                            <a href="/Admin/AdminBanner/Index/" class="btn btn-dark waves-effect waves-light">İptal</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
