@model UpdateAboutDto

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Hakkımızda Bilgisi Güncelleme</h4>
                        <p class="card-subtitle mb-4">
                            Hakkımızda sayfası alanında bulunan bilgileri aşağıdan düzenleyebilirsiniz. Tema bütünlüğünün bozulmaması adına lütfen sadece <b>1</b> tane veri girişi yapınız. Aksi durumlarda tema bütünlüğü bozulacaktır.
                        </p>
                        <form method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="hidden" asp-for="AboutID" />
                                    <div class="form-group">
                                        <label for="exampleInputTitle">Başlık</label>
                                        <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Başlığı giriniz">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputDescription">Açıklama</label>
                                        <textarea rows="4" asp-for="Description" class="form-control" placeholder="Açıklamayı giriniz"></textarea>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="exampleInputimageUrl">Kapak Fotoğrafı Url</label>
                                        <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl" placeholder="Kapak Fotoğraf Linkini Giriniz">
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                            <a href="/Admin/AdminAbout/Index/" class="btn btn-dark waves-effect waves-light">İptal</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
