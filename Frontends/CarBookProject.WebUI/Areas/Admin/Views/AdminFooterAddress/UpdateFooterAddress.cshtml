@model UpdateFooterAddressDto
@{
    ViewData["Title"] = "UpdateFooterAddress";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Adres Bilgisi Girişi</h4>
                        <p class="card-subtitle mb-4">Adres alanına ait bilgileri bu panel üzerinden ekleyebilirsiniz.</p>
                        <form method="post" asp-action="UpdateFooterAddress" asp-controller="AdminFooterAddress">
                            <input type="hidden" asp-for="FooterAddressID" />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="exampleInputName">Adres</label>
                                        <input type="text" class="form-control" id="exampleInputAddress" asp-for="Address" placeholder="Adres bilgisini giriniz">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputName">Telefon</label>
                                        <input type="text" class="form-control" id="exampleInputAddress" asp-for="Phone" placeholder="Telefon bilgisini giriniz">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputName">Email</label>
                                        <input type="text" class="form-control" id="exampleInputAddress" asp-for="Email" placeholder="Email bilgisini giriniz">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputDescription">Açıklama</label>
                                        <input type="text" asp-for="Description" class="form-control" placeholder="Açıklamayı giriniz">
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                            <a href="/Admin/AdminFooterAddress/Index/" class="btn btn-dark waves-effect waves-light">İptal</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

