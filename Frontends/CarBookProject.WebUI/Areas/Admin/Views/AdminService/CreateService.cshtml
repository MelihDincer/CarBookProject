@model CreateServiceDto
@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Hizmet Sayfası Girişi Alanı</h4>
                        <p class="card-subtitle mb-4">Anasayfa ve hizmetler bölümünde yer alan hizmet listesinin admin tarafındaki işlemlerini aşağıdaki sayfadan gerçekleştirebilirsiniz. Tema bütünlüğünü korumak adına 4 tane hizmet girişi yapınız.</p>
                        <form method="post" asp-action="CreateService" asp-controller="AdminService">
                            <div class="form-group">
                                <label for="exampleInputName">Hizmet Başlığı</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Hizmet başlığını giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Hizmet Açıklaması</label>
                                <input type="text" class="form-control" id="exampleInputDescripton" asp-for="Description" placeholder="Hizmet açıklamasını giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Hizmet Icon Url</label>
                                <input type="text" class="form-control" id="exampleInputIconUrl" asp-for="IconUrl" placeholder="Hizmet icon bilgisini giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                            <a href="/Admin/AdminService/Index/" class="btn btn-dark waves-effect waves-light">İptal</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

